//univer class
package First;

public class univer
{
	String name;
	int id;
	static String department = "CSE" ;
	
	univer(String n, int i)
	{
		name = n;
		id = i;
	}
	
	void display()
	{
		System.out.println("Welcome = "+name);
		System.out.println("ID = "+id);
		System.out.println("From  "+department);
		System.out.println();
	}
}





//static variable main class

package First;

public class static_variable {
	public static void main(String[] args)
	{
		univer a = new univer("Trisha",1016);
		a.display();
		
		univer b = new univer("Mitu",560);
		b.display();
	}
}
